{
  "experiment_id": "cyano_rna",
  "experiment_type": "random partition",
  "model": "CellBox",
  "sparse_data": false,
  "pert_file": "cyano_rna/cyano_rna_input_pert.csv",
  "expr_file": "cyano_rna/cyano_rna_input_expr.csv",
  "node_index_file": "cyano_rna/cyano_rna_node_index.csv",
  "n_protein_nodes": 157,  # protein nodes
  "n_activity_nodes": 202,  # protein + phenotype
  "n_x" : 227,   # protein + phenotype + perturbation 
  "trainset_ratio": 0.7,   
  "validset_ratio": 0.8,
  "batchsize": 4,
  "add_noise_level": 0,

  "envelop_form": "tanh",  # possibly to change it
  "dT": 0.1,    # time step
  "envelop":0,    # 
  "ode_degree": 1,  # might need to change depends on the results quality
  "ode_solver": "heun",   # are there better ones? They found "heun" is the best for their purpose 
  "ode_last_steps": 2,
  "l1lambda": 1e-4,
  "l2lambda": 1e-4,

  "n_epoch": 10000,
  "n_iter": 10000,
  "n_iter_buffer":50,
  "n_iter_patience":100,

  "stages":[{
    "nT": 100,
    "sub_stages":[
        {"lr_val": 0.1,"l1lambda": 0.01, "n_iter_patience":1000},
        {"lr_val": 0.01,"l1lambda": 0.01},
        {"lr_val": 0.01,"l1lambda": 0.0001},
        {"lr_val": 0.001,"l1lambda": 0.00001}
    ]},{
    "nT": 200,
    "sub_stages":[
        {"lr_val": 0.001,"l1lambda": 0.0001}
    ]},{
    "nT": 400,
    "sub_stages":[
        {"lr_val": 0.001,"l1lambda": 0.0001}
    ]}],

    "export_verbose": 3,
    "ckpt_name": "cyano_rna"
}
